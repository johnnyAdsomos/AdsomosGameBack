// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  champion String @id @unique
  name String
  score Int
  admin Boolean @default(false)
  historics Historic[]

  @@map("player")
}

model Quest {
  id Int @id @default(autoincrement())
  title String
  description String?
  type String
  reward Int

  @@map("quest")
}

model Historic{
  id Int @id @default(autoincrement())
  player Player @relation(fields: [champion], references: [champion])
  champion String
  title String
  type String
  reward Int
}
